<script>
(function () {
  const params = new URLSearchParams(window.location.search);

  // Normalize base: lowercase, trim, spaces/dashes -> underscores
  const rawAnimal = (params.get("animal") || "sheep").trim().toLowerCase();
  const cleaned = rawAnimal.replace(/[\s-]/g, "_");

  // Alias map so variations still work
  const aliasMap = {
    "lovebird": "love_bird",
    "love_bird": "love_bird",
    "lovebird_plan": "love_bird",
    "love_bird_plan": "love_bird",
    "owl_plan": "owl",
    "rhino_plan": "rhino",
    "sheep_plan": "sheep"
  };

  const animal = aliasMap[cleaned] || cleaned;

  // Hide all
  document.querySelectorAll(".animal-plan").forEach(div => div.style.display = "none");

  // Show selected (fallback to sheep)
  let winnerEl = document.getElementById(animal + "-plan");
  if (!winnerEl) winnerEl = document.getElementById("sheep-plan");
  if (winnerEl) winnerEl.style.display = "block";

  // Back button goes to Page 1 with same params
  const backBtn = document.getElementById("back-btn");
  if (backBtn) backBtn.href = "/pages/animal-business-quiz?" + params.toString();
})();
</script>
