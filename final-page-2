<script>
(function () {
  const params = new URLSearchParams(window.location.search);
  const animal = params.get("animal") || "sheep";

  // Hide all, show only the selected animal plan
  document.querySelectorAll(".animal-plan").forEach(div => div.style.display = "none");
  const winnerEl = document.getElementById(animal + "-plan");
  if (winnerEl) winnerEl.style.display = "block";

  // Back button goes to Page 1 with same params
  const backBtn = document.getElementById("back-btn");
  if (backBtn) {
    backBtn.href = "/pages/animal-business-quiz?" + params.toString();
  }
})();
</script>
